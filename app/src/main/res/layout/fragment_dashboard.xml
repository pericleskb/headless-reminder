<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/numOfAlarmsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/alarmNumberPicker"
        app:layout_constraintBottom_toBottomOf="@+id/alarmNumberPicker"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:text="@string/num_of_alarms"/>

    <NumberPicker
        android:id="@+id/alarmNumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/numOfAlarmsText"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/gray"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setAlarmsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/alarmNumberPicker"
        app:layout_constraintTop_toTopOf="@id/alarmNumberPicker"
        app:layout_constraintBottom_toBottomOf="@+id/alarmNumberPicker"
        android:layout_marginStart="16dp"
        android:text="@string/set_alarms"/>

</androidx.constraintlayout.widget.ConstraintLayout>